MYSQL_PORT=53306
REDIS_PORT=56379
MONGO_PORT=57017
POSTGRES_PORT=55432

# MySQL配置
MYSQL_DATABASE=gatewayz
MYSQL_USER=gatewayz
MYSQL_PASSWORD=password
MYSQL_ROOT_PASSWORD=root_password
SERVICE_TAGS=dev

# 存储路径配置
VOLUMES_DIR=./volumes/

# MongoDB配置
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=mongo_password

# PostgreSQL配置
PG_PASS=postgres_password
PG_USER=root

# 网络配置
COMPOSE_DEFAULT_NETWORK=storage

# 连接URL (Connection URLs)
# =========================
# MySQL: mysql://gatewayz:password@localhost:53306/gatewayz
# Redis: redis://localhost:56379
# MongoDB: mongodb://admin:mongo_password@localhost:57017
# PostgreSQL: postgresql://root:postgres_password@localhost:55432
